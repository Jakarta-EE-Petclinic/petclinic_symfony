{% extends 'base.html.twig' %}

{% block title %}Owner index{% endblock %}

{% block body %}
    <h1>Owner index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Street_address</th>
                <th>Zip_code</th>
                <th>City</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for owner in owners %}
            <tr>
                <td>{{ owner.id }}</td>
                <td>{{ owner.firstName }}</td>
                <td>{{ owner.lastName }}</td>
                <td>{{ owner.streetAddress }}</td>
                <td>{{ owner.zipCode }}</td>
                <td>{{ owner.city }}</td>
                <td>{{ owner.telephone }}</td>
                <td>{{ owner.email }}</td>
                <td>
                    <a href="{{ path('app_owner_show', {'id': owner.id}) }}">show</a>
                    <a href="{{ path('app_owner_edit', {'id': owner.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_owner_new') }}">Create new</a>
{% endblock %}
